<Window x:Class="LegoStorageFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegoStorageFiles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Width="100" Height="30" Content="Tallózás" Click="LoadFile"/>

        <Label Content="Szűrés:" Grid.Column="2" VerticalAlignment="Center" Margin="30 0 0 0"/>
        <TextBox x:Name="searchByTxt" Grid.Column="2" Grid.ColumnSpan="2" Width="300" Height="30" HorizontalAlignment="Right" TextChanged="SearchByIdAndName"/>


        <DataGrid x:Name="legoInfoHolderDg" Grid.Row="1" Grid.ColumnSpan="4" />
    </Grid>
</Window>
